{
  "components": {
    // Components dictionary match component name as key, core is special case
    "core": {
      "schemas": {
        "entity_base": {
          "config_vars": {}
        },
        "mqtt_base": {
          "config_vars": {}
        }
      },
      "actions": {
        "delay": {},
        "if": {}
      },
      "conditions": {
        "and": {},
        "or": {},
        "not": {},
        "for": {}
      }
    },
    "esphome": {
      "schemas": {
        // CONFIG_SCHEMA is the special name of the root schema, means component has root schema
        "CONFIG_SCHEMA": {
          "config_vars": {
            "project": {
              "type": "object", // prop types can be object (and inline schema), schema (and refer a schema, see wifi.manual_ip, condition, action, list, or scalar (string or number validated by esphome) )
              "schema": {
                "config_vars": {}
              }
            }
          }
        }
      }
    },
    "sensor": {
      // a components key means this has platform components
      "components": ["dallas", "ads1117"],
      "schemas": {
        "SENSOR_SCHEMA": {
          "config_vars": {},
          "extends": ["core.entity_base", "core.mqtt_base"]
        }
      },
      // registries
      "filters": {},
      "actions": {},
      "conditions": { "in_range": {} }
    },
    "wifi": {
      "schemas": {
        "STA_MANUAL_IP_SCHEMA": {
          "config_vars": {}
        },
        "CONFIG_SCHEMA": {
          "config_vars": {
            "manual_ip": {
              "type": "schema",
              "schema": "wifi.STA_MANUAL_IP_SCHEMA" // schema reference
            }
          }
        }
      },
      "conditions": {
        "connected": {}
      }
    },
    "dallas": {
      "schemas": {
        "CONFIG_SCHEMA": {
          "config_vars": {
            "id": {},
            "pin": {},
            "setup_priority": {}
          }
        }
      }
    },
    "dallas.sensor": {
      "schemas": {
        "CONFIG_SCHEMA": {
          "config_vars": {
            "dallas_id": {},
            "address": {},
            "index": {}
          }
        }
      }
    }
  }
}
